<dialogs:DissmissableDialog
    x:Class="PrivateWiki.UI.Dialogs.WikiLinkDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dialogs="using:PrivateWiki.UI.Dialogs"
    mc:Ignorable="d"
    Title="Insert WikiLink"
    PrimaryButtonText="Insert"
    PrimaryButtonClick="InsertHyperlink_Click"
    CloseButtonText="Abort"
    DefaultButton="Primary">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ComboBox
            Name="WikiLinkComboBox"
            PlaceholderText="WikiLink"
            IsTextSearchEnabled="True"
            LightDismissOverlayMode="Auto" />
    </Grid>
</dialogs:DissmissableDialog>