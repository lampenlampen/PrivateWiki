<Page
    x:Class="PrivateWiki.UWP.UI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:PrivateWiki.UWP.UI.Pages"
    xmlns:controls="using:PrivateWiki.UWP.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid
        Height="Auto"
        Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>


        <StackPanel
            x:Name="Seitenleiste"
            Grid.Column="0" />

        <Frame
            Name="EditorFrame"
            Width="Auto"
            Height="Auto"
            Grid.Column="1"
            d:DataContext="{d:DesignInstance Type=pages:MarkdownPageEditor, IsDesignTimeCreatable=True}" />

    </Grid>
</Page>