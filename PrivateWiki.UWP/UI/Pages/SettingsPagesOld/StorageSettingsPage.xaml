<Page
    x:Class="PrivateWiki.UWP.UI.Pages.SettingsPagesOld.StorageSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwp="using:FontAwesome.UWP"
    xmlns:controls="using:PrivateWiki.UWP.UI.Controls"
    mc:Ignorable="d"
    Background="#EEEEEE">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <controls:SettingsHeader
            Grid.Row="0"
            Title="Storage"
            Subtitle="Storage Settings"
            ApplyClick="SettingsHeader_OnApplyClick"
            ResetClick="SettingsHeader_OnResetClick">
            <controls:SettingsHeader.Icon>
                <uwp:FontAwesome Icon="Database" FontSize="32"/>
            </controls:SettingsHeader.Icon>
        </controls:SettingsHeader>
    </Grid>
</Page>
