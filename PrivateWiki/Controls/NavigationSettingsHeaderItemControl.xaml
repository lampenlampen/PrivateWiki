<UserControl
    x:Name="NavigationSettingsHeaderItemUserControl"
    x:Class="PrivateWiki.Controls.NavigationSettingsHeaderItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrivateWiki.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Height="Auto">

    <Grid Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="White">
            
            <TextBlock Text="Header" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBox x:Name="Text" Header= "{Binding HeaderText, ElementName=NavigationSettingsHeaderItemUserControl}" Margin="0,24,0,0" Width="400" HorizontalAlignment="Left" TextChanged="Text_OnTextChanged"/>
            <Button HorizontalAlignment="Right" Click="Button_Click">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" />
                    <TextBlock Text="Delete Header"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Grid>
</UserControl>
