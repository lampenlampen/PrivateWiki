<UserControl
    x:Class="PrivateWiki.Controls.NavigationSettingsHeaderItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrivateWiki.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        
        <StackPanel>
            <TextBlock Text="Header" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBox x:Name="Text" Header= "Text" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="PersonalFullName"/>
        </StackPanel>

    </Grid>
</UserControl>
