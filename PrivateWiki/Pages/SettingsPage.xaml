                            Margin="0, 0, 16, 0"/>

                        <TextBlock>Navigation</TextBlock>

                    </StackPanel>

                </ListViewItem.Content>
            </ListViewItem>
            <ListViewItem>Pages</ListViewItem>
            <ListViewItem>Theme</ListViewItem>

            <ListViewHeaderItem>
                Modules
            </ListViewHeaderItem>
            <ListViewItem>Rendering</ListViewItem>
            <ListViewItem>Storage</ListViewItem>

            <ListViewHeaderItem>
                System
            </ListViewHeaderItem>
            <ListViewItem>Developer Tools</ListViewItem>
            -->

        </ListView>

        <Frame
            Name="SettingsContentFrame"
            Grid.Column="1"
            Background="#EEEEEE"
            />

    </Grid>
</Page>
