                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <FontIcon
                                                    x:Name="MarkdownHtmlListItemIcon"
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Glyph="&#xE11D;"
                                                    Margin="0, 0, 12, 0" />
                                                <StackPanel
                                                    x:Name="MarkdownToHtmlListItemText"
                                                    Grid.Column="1">
                                                    <TextBlock Text="{x:Bind Title}" FontSize="18" />
                                                    <TextBlock Text="{x:Bind Subtitle}" />
                                                </StackPanel>
                                                <Ellipse
                                                    x:Name="HtmlStatus"
                                                    Grid.Column="2"
                                                    Margin="16,0,8,0"
                                                    Height="10"
                                                    Width="10"
