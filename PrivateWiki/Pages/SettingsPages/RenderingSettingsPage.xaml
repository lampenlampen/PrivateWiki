                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>

                                </ListView>

                            </controls1:Expander>
                            
                            -->

                    </StackPanel>
                </controls1:DropShadowPanel>

                </Grid>

                <Grid
                    Grid.Column="1"
                    x:Name="RenderingSettingsItemContent" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>